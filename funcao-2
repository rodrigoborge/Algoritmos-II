#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int maior (int a, int b, int c)
{
	

	if (a > b && a > c)
	{
		return a;
	}
	
		if (b > a && b > c)
			{
					return b;
			}
			
			 		else
						{
							return c;
						}
}


int main ()
{
	int x, y, z;
	setlocale (LC_ALL, "PORTUGUESE");
	
	printf ("\nDigite um valor para A: ");
	scanf ("%d", &x);
	printf ("\nDigite um valor para B: ");
	scanf ("%d", &y);
	printf ("\nDigite um valor para C: ");
	scanf ("%d", &z);
	
	printf ("\n\nO maior valor digitado Ã© %d", maior (x, y, z));
	
}
