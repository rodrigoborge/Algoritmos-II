#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main ()
{
	setlocale (LC_ALL, "PORTUGUESE");
	
int i;
float soma, media, nota [5];

soma = 0;

for (i = 0; i < 5; i++)
{
	printf ("Digite a nota do aluno %i: ", i);
	scanf ("%f", &nota[i]);
	
	soma = soma + nota[i];
	media = (float)soma/5;
	system ("cls");
}

for (i = 0; i < 5; i++)

 	if (nota [i] > media){
 	
	printf ("\nAs notas acima da média são: %.2f", nota [i]);
}

 }
